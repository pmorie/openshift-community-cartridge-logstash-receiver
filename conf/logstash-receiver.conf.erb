input {
redis { host => "<%= ENV['OPENSHIFT_REDIS_HOST']%>"
        port => "<%= ENV['OPENSHIFT_REDIS_PORT']%>"
        password => "<%= ENV['OPENSHIFT_REDIS_PASSWORD']%>"
        data_type => "list"
        key => "logstash"
        codec => "json" }
}
output {
  file { path => "<%= ENV['OPENSHIFT_TMP_DIR']%>/%{+YYYY-MM-dd}.txt" }
  websocket { host => "<%= ENV['OPENSHIFT_GEAR_DNS']%>" port => "<%= ENV['OPENSHIFT_LOGSTASH_WS_PORT']%>" }
}
