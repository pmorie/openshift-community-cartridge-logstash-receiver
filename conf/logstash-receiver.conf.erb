input {
redis { host => "<%= ENV['OPENSHIFT_REDIS_HOST']%>"
        port => "<%= ENV['OPENSHIFT_REDIS_PORT']%>"
        password => "<%= ENV['OPENSHIFT_REDIS_PASSWORD']%>"
        data_type => "list"
        key => "logstash"
        codec => "json" }
}
output {
  file { path => "<%= ENV['OPENSHIFT_TMP_DIR']%>/logstash.%{+YYYY-MM-dd}.txt" }
  elasticsearch { host => "<%= ENV['OPENSHIFT_ELASTICSEARCH_HOST']%>" port => "<%= ENV['OPENSHIFT_ELASTICSEARCH_PORT']%>" }
}
